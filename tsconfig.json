{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    /* If transpiling with TypeScript: */
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@kubb/fabric-core/parsers": ["packages/fabric-core/src/parsers/index.ts"],
      "@kubb/fabric-core/plugins": ["packages/fabric-core/src/plugins/index.ts"],
      "@kubb/fabric-core/types": ["packages/fabric-core/src/types.ts"],
      "@kubb/fabric-core": ["packages/fabric-core/src/index.ts"],
      "@kubb/react-fabric/jsx-runtime": ["packages/react-fabric/src/jsx-runtime.ts"],
      "@kubb/react-fabric/jsx-dev-runtime": ["packages/react-fabric/src/jsx-runtime.ts"],
      "@kubb/react-fabric/parsers": ["packages/react-fabric/src/parsers/index.ts"],
      "@kubb/react-fabric/plugins": ["packages/react-fabric/src/plugins/index.ts"],
      "@kubb/react-fabric/types": ["packages/react-fabric/src/types.ts"],
      "@kubb/react-fabric": ["packages/react-fabric/src/index.ts"]
    },
    "types": ["vitest/globals", "bun-types", "./reset.d.ts"],
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "declaration": false,
    "declarationMap": false
  },
  "include": ["./package.json", "./tsdown.config.ts", "./vitest.config.ts", "./src/**/*"],
  "exclude": ["node_modules", "dist", "tmp", "coverage", "**/__snapshots__/**"]
}
